# i3status configuration file.

general {
        colors = true
	color_good = "#B5BD68"
	color_degraded = "#F0C674"
	color_bad = "#cc6666"
        interval = 1
}

#order += "ipv6"
{% if laptop == true %}
order += "wireless {{ wlp }}"
order += "wireless wwp0s20f0u6i12"
{% endif %}
order += "disk /"
order += "disk /zfs"
{% if 'betelgeuse' in ansible_hostname %}
#order += "disk /zfs/Downloads"
{% endif %}
{% if 'guest' not in ansible_virtualization_role %}
order += "cpu_temperature 0"
order += "volume master"
{% else %}
order += "battery 0"
{% endif %}
{% if laptop == true %}
order += "battery 0"
order += "battery 1"
{% endif %}
order += "tztime local"

wireless {{ wlp }} {
        format_up = "%essid %frequency %bitrate %ip"
        format_down = "⚠ Not Connected ⚠"
	min_width = 350
	align = "left"
}

wireless wwp0s20f0u6i12 {
        format_up = "Modem %bitrate %ip"
        format_down = "⚠ Not Connected ⚠"
	min_width = 350
	align = "left"
}

cpu_temperature 0 {
	format = " %degrees° "
	path = "/sys/devices/platform/coretemp.0/hwmon/hwmon4/temp1_input"
	max_threshold = "60"
}

battery 0 {
        format = " %status %percentage"
	last_full_capacity = "true"
	integer_battery_capacity = "true"
	status_chr = "⚇"
	status_bat  = "⚡"
	status_full = "☻"
	low_threshold = "15"
	min_width = 10
	align = "center"
  format_down = "Virtual Machine: [ {{ ansible_hostname }} ]"
}

battery 1 {
        format = " %status %percentage"
	last_full_capacity = "true"
	integer_battery_capacity = "true"
	status_chr = "⚇"
	status_bat  = "⚡"
	status_full = "☻"
	low_threshold = "15"
	min_width = 10
	align = "center"
  format_down = ""
}

volume master {
        format = " ♪ %volume "
	format_muted = " ♪ muted "
	device = "default"
	mixer = "Master"
	mixer_idx = 0
}

tztime local {
        format = " %H:%M:%S"
}



disk "/" {
  format = " ✓ (%avail / %total)"
	low_threshold = "25"
	threshold_type = "percentage_avail"
	prefix_type = "decimal"
#	min_width = 220
#	align = "center"
}
disk "/zfs/Downloads" {
  format = " ⌂ (%avail / %total) "
	low_threshold = "25"
	threshold_type = "percentage_avail"
	prefix_type = "decimal"
}
disk "/zfs" {
  format = "⛀ (%avail / %total) "
	low_threshold = "50"
	threshold_type = "gbytes_avail"
	format_not_mounted=" /zfs N/A"
	prefix_type = "decimal"
	min_width = 120
	align = "center"
#	align = "right"
}
